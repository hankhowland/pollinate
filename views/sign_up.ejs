<%- include('partials/topnav_signedout') %>

<style>
    #sign-in {
        outline: 4px solid  #15335e;
        padding: 10px 10px;
        background-color: #f2f4f7;
    }
    body {
        overflow:hidden;
    }
</style>

<div class="overflow-auto" style="height:100%;">
    <div style="text-align:center; margin: auto; margin-top:20px; margin-bottom: 20px;">
        <iframe width="560" height="315" src="https://www.youtube.com/embed/3L6ggIXueI4" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
    <div style="margin:auto; margin-bottom: 100px; width:560px;" id="sign-in">
        <h3 style="color:#15335e;">Sign Up</h3>
        <form action="/routes/signup" method="post">
            <div id="signupInfo" style="color:red; visibility:hidden;"></div>
            <div class="form-group">
                <input type="email" name="email" class="form-control" placeholder="Email">
            </div>
            <!-- <div class="form-group">
                <input type="text" name="venmo" class="form-control" placeholder="Venmo">
            </div> -->
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Password">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm Password">
            </div>
            <button type="submit" class="btn" style="background: #15335e; color: white;">Sign Up</button>
            <div style="margin-top:5px;"><p>Already have an account? <a href="/routes/signin_page"">Sign In</a></p></div>
            </form>
    </div>
</div>

<script>
    if (window.location.href.indexOf("passwordShort") > -1) {
        document.querySelector('#signupInfo').style.visibility = 'visible';
        document.querySelector('#signupInfo').innerHTML = 'Your password must be at least 8 characters long.';
    }
    else if (window.location.href.indexOf("passwordsMatch") > -1) {
        document.querySelector('#signupInfo').style.visibility = 'visible';
        document.querySelector('#signupInfo').innerHTML = 'Your password and password confirmation did not match.';
    }
    else if (window.location.href.indexOf("userExists") > -1) {
        document.querySelector('#signupInfo').style.visibility = 'visible';
        document.querySelector('#signupInfo').innerHTML = 'There is already an account associated with that email.';
    }
</script>