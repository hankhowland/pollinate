<%- include('partials/topnav_signedout') %>

<style>
    #sign-in {
        outline: 4px solid  #15335e;
        padding: 10px 10px;
        background-color: #f2f4f7;
    }

</style>

<div class="container">
    <div class="row" style="height:200px;"></div>
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6" id="sign-in">
            <h3 style="color:#15335e;">Sign In</h3>
            <div style="color:green; visibility:hidden;" id="signinInfo"></div>
            <form action="/routes/sign_in" method="post">
                <div class="form-group">
                  <input type="email" name="email" class="form-control" placeholder="Email">
                </div>
                <div class="form-group">
                  <input type="password" class="form-control" name="password" placeholder="Password">
                </div>
                <button type="submit" class="btn" style="background: #15335e; color: white;">Sign In</button>
                <div style="margin-top:5px;"><p>Don't have an account? <a href="/routes/signup_page">Sign Up</a></p></div>
              </form>
        </div>
        <div class="col-3"></div>
    </div>
    <div class="row"></div>
</div>


<script>
  var signinInfo = document.querySelector('#signinInfo');
  if (window.location.href.indexOf("accountCreated") > -1) {
      signinInfo.style.visibility = 'visible';
      signinInfo.innerHTML = 'Account created successfully.';
  }
  else if (window.location.href.indexOf("accountExists") > -1) {
      signinInfo.style.visibility = 'visible';
      signinInfo.style.color = 'red';
      signinInfo.innerHTML = 'We could not find an account associated with that email.';
  }
  else if (window.location.href.indexOf("passwordIncorrect") > -1) {
      signinInfo.style.visibility = 'visible';
      signinInfo.style.color = 'red';
      signinInfo.innerHTML = 'Incorrect password.';
  }
</script>